//Cross-Browser Support Configuration
//------------------------------
@import "compass/support"  

// Support for crap Web browsers
$legacy-support-for-ie: 	true
$legacy-support-for-ie6: 	$legacy-support-for-ie  
$legacy-support-for-ie7: 	$legacy-support-for-ie  
$legacy-support-for-ie8: 	$legacy-support-for-ie

// Support for good Web browsers
$experimental-support-for-mozilla: 			true
$experimental-support-for-webkit: 			true
$support-for-original-webkit-gradients:		true 
$experimental-support-for-opera: 			true            
$experimental-support-for-microsoft: 		true       
$experimental-support-for-khtml: 			false

// Support for svg in experimental css3 properties. Setting this to true might add significant size to your generated stylesheets
$experimental-support-for-svg: false             

// Support for CSS PIE in experimental css3 properties (-pie)
$experimental-support-for-pie: false      

// Whether to output legacy support for mozilla. Usually this means hacks to support Firefox 3.6 or earlier       
$legacy-support-for-mozilla: true               